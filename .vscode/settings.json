{
	"editor.insertSpaces": true,
	"editor.tabSize": 2,
	"editor.detectIndentation": false,
	"editor.formatOnSave": true,
	"editor.codeActionsOnSave": {
		"source.fixAll": "explicit",
		"source.fixAll.eslint": "explicit"
	},
	"editor.defaultFormatter": "esbenp.prettier-vscode",
	"[typescript]": {
		"editor.insertSpaces": true,
		"editor.tabSize": 2
	},
	"[typescriptreact]": {
		"editor.insertSpaces": true,
		"editor.tabSize": 2
	}
}
